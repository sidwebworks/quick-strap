{
   "name": "<%= projectName %>",
   "version": "0.1.0",
   "sideEffects": false,
   "license": "MIT",
   "main": "dist/cjs/index.js",
   "module": "dist/esm/index.js",
   "exports": {
      ".": {
         "require": "./dist/cjs/index.js",
         "default": "./dist/esm/index.js"
      }
   },
   "files": [
      "dist"
   ],
   "publishConfig": {
      "access": "public"
   },
   "scripts": {
      "clean": "rimraf dist",
      "start": "nodemon --watch src --exec yarn build -e js,jsx",
      "build": "concurrently yarn:build:*",
      "test": "jest --env=jsdom --passWithNoTests",
      "lint": "concurrently yarn:lint:*",
      "version": "yarn build",
      "build:esm": "cross-env BABEL_ENV=esm babel src --root-mode upward --extensions .js,.jsx -d dist/esm --source-maps",
      "build:cjs": "cross-env BABEL_ENV=cjs babel src --root-mode upward --extensions .js,.jsx -d dist/cjs --source-maps",
      "test:cov": "yarn test --coverage",
      "lint:src": "eslint src --ext .js,.jsx --config ../../.eslintrc"
   },
   "devDependencies": {
      "react": "^17.0.2",
      "react-dom": "^17.0.2",
      "cross-env": "^7.0.3",
      "@babel/cli": "^7.14.5",
      "@babel/core": "^7.14.5",
      "@babel/plugin-proposal-class-properties": "^7.14.5",
      "@babel/preset-env": "^7.14.5",
      "@babel/preset-react": "^7.14.5",
      "@babel/runtime": "^7.14.5",
      "concurrently": "^6.2.1",
      "nodemon": "^2.0.12",
      "rimraf": "^3.0.2"
   },
   "peerDependencies": {
      "react": ">=16.8.6",
      "react-dom": ">=16.8.6"
   }
}
